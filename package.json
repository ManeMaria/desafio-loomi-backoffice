{
  "name": "node-leap",
  "version": "0.0.0",
  "description": "Node Leap is a node boilerplate that follows best practicles of software design and agile",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start:dev": "npx nodemon --exec 'npm run build && node dist/main/server.js' --watch src -e ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loomi/node-leap.git"
  },
  "author": "itd@cin.ufpe.br",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/loomi/node-leap/issues"
  },
  "homepage": "https://github.com/loomi/node-leap#readme",
  "devDependencies": {
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
