{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "unused-imports"
  ],
  "rules": {
    "no-redeclare": "off",
    "import/export": "off",
    "no-useless-constructor": "off",
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error"
  },
  "globals": {
    "NodeJS": true
  }
}