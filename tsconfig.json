{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    //"declaration": true,
    //"declarationMap": true,
    //"sourceMap": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../__tests__/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": []
}
